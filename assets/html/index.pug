                        p.services__title Урология
                    .services__item.services__item--8
                        p.services__title Эндокринология
                    .services__item.services__item--9
                        p.services__title Онкология
                    .services__item.services__item--10
                        p.services__title Кардиология
                    .services__item.services__item--11
                        p.services__title Дерматология
                    .services__item.services__item--12
                        p.services__title Косметология
                    .services__item.services__item--13
                        p.services__title Пластическая хирургия
                    .services__item.services__item--14
                        p.services__title Стоматология
                    .services__item.services__item--15
